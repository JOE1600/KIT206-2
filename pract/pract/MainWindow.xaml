<Window x:Class="pract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="241*"/>
      <ColumnDefinition Width="309*"/>



      <ColumnDefinition Width="242*"/>
    </Grid.ColumnDefinitions>




    <Grid.RowDefinitions>
      <RowDefinition Height="81*"/>
      <RowDefinition Height="338*"/>
    </Grid.RowDefinitions>
    <ComboBox x:Name="ResearcherComboBox" HorizontalAlignment="Left" Margin="35,18,0,0" VerticalAlignment="Top" Width="176" Height="34" SelectionChanged="ResearcherComboBox_SelectionChanged"/>
    <ListView x:Name="ResearcherListView" ItemsSource="{Binding Researchers}" HorizontalAlignment="Left" Height="301" Margin="35,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="176">
      <ListView.View>
        <GridView>
          <GridViewColumn/>
        </GridView>
      </ListView.View>
    </ListView>
    <ListView Grid.Column="1" x:Name="PublicationListView" ItemsSource="{Binding Publications}" HorizontalAlignment="Left" Height="301" Margin="33,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="253">
      <ListView.View>
        <GridView>
          <GridViewColumn/>
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</Window>
